<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">


    </Transition>

    <Transition
        motion:autoTransition="animateToStart"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">



    <ConstraintSet android:id="@+id/start">
        <Constraint>
            <Layout
        </Constraint>


        <Constraint


            motion:layout_constraintEnd_toEndOf="@id/footballField"
            android:layout_width="80dp"
            android:layout_height="80dp"
            motion:layout_constraintBaseline_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.471"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ball"
            motion:layout_editor_absoluteY="187dp" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/end">
<Constraint>
            <Layout
                android:layout_width="100dp"
                android:layout_height="100dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                />

    </Constraint>
        <Constraint
            android:layout_height="80dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.501"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="80dp"
            motion:layout_constraintTop_toBottomOf="parent"
            android:id="@+id/ball" />

    </ConstraintSet>
</MotionScene>